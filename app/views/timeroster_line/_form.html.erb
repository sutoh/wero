<div id="calculator">
<%= form_for(@time_add) do |f| %>
  
  <fieldset class="workdate">
    <%= f.label :work_date %>
    <%= select_year Time.now,{:prefix=>"time_roster", :field_name=>"work_date(1i)", :start_year=>Time.now.year, :end_year=>Time.now.year+2} %>
    <div class="sblabel">年</div>
    <%= select_month Time.now, :prefix=>"time_roster", :field_name=>"work_date(2i)", :use_month_numbers=>true %>
    <div class="sblabel">月</div>
    <%= select_day Time.now, :prefix=>"time_roster",:field_name=>"work_date(3i)" %>
    <div class="sblabel">日</div>
  </fieldset>
  <fieldset class="gotime">
      <%= f.label :going_work_time %>
      <%= f.text_field :going_work_time , :value => "9:00", :size => 10 %>
  </fieldset>
  <fieldset class="quittime">
      <%= f.label :quit_work_time %>
      <%= f.text_field :quit_work_time , :value => Time.now.strftime("%H:%M") ,:size => 10 %>
  </fieldset>
  <div class="actions">

    <button type="submit" class="btn btn-primary">
      <i class="icon-plus icon-white"></i>
        Create Time Roster
    </button>
  </div>

<% end %>
<script>
$("#time_roster_work_date_1i").selectbox({
	effect: "slide"
});
$("#time_roster_work_date_2i").selectbox({
	effect: "slide"
});
$("#time_roster_work_date_3i").selectbox({
	effect: "slide"
});
</script>
</div>