<h1>Listing time_rosters</h1>

<table>
  <tr>
    <th>Work date</th>
    <th>Going work time</th>
    <th>Quit work time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @time_rosters.each do |time_roster| %>
  <tr>
    <td><%= time_roster.work_date %></td>
    <td><%= time_roster.going_work_time.strftime('%H:%M:%S').to_s %></td>
    <td><%= time_roster.quit_work_time.strftime('%H:%M:%S').to_s %></td>
    <td><%= time_roster.going_work_time %></td>
    <td><%= time_roster.quit_work_time %></td>
    <td><%= link_to 'Show', time_roster %></td>
    <td><%= link_to 'Edit', edit_time_roster_path(time_roster) %></td>
    <td><%= link_to 'Destroy', time_roster, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

